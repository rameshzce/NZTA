<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".UserConfirmationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Thanks for joining NZTA. OTP has been sent to your mobile, please confirm your mobile number."      />

    <EditText
        android:id="@+id/editOtp"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:inputType="number"
        android:layout_height="wrap_content"    />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Confirm"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_button_rounded"
        android:textColor="@color/white"
        android:onClick="confirmMobile"  />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_button_rounded"
        android:textColor="@color/white"
        android:text="Home"
        android:onClick="goHome"  />

</LinearLayout>
